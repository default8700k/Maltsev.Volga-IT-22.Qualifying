<!DOCTYPE html>
<html lang="ru">
<head>
    <meta name="robots" content="noindex, nofollow" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />

    <link rel="stylesheet" type="text/css" href="/lib/bootstrap/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="/css/styles.css" asp-append-version="true" />

    <script type="text/javascript" src="/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/lib/bootstrap/bootstrap.min.js" asp-append-version="true"></script>

    <title>@ViewBag.Title - Мальцев В.Л.</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light fixed-top">
        <div class="container-lg">
            <a class="navbar-brand" href="#">Мальцев В.Л.</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navigation">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Applications" asp-action="Index">Список приложений</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Applications" asp-action="Create">Добавить приложение</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Авторизация</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <main class="container-lg" role="main">
        <div class="my-3 my-lg-5">
            @RenderBody()
        </div>
    </main>
</body>
</html>
